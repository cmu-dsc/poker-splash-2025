---
import { Image } from "astro:assets";
import { getCollection } from "astro:content";
import competitionLogo from "../assets/competition-logo.svg";
import jumpLogo from "../assets/jump-new-logo.png";
import EmailIcon from "../components/icons/EmailIcon.astro";
import GithubIcon from "../components/icons/GithubIcon.astro";
import LargeDiscordIcon from "../components/icons/LargeDiscordIcon.astro";
import SmallDiscordIcon from "../components/icons/SmallDiscordIcon.astro";
import SEO from "../components/SEO.astro";
import TeamMember from "../components/TeamMember.astro";
import "../styles/animations.css";
import "../styles/global.css";
import "../styles/sections/about.css";
import "../styles/sections/prize.css";
import "../styles/sections/rules.css";
import "../styles/sections/sponsors.css";
import "../styles/sections/timeline.css";

const [leadershipData] = await getCollection("leadership");
const [developersData] = await getCollection("developers");
const [founderData] = await getCollection("founders");
const [alumniData] = await getCollection("alumni");

const leadership = leadershipData.data;
const developers = developersData.data;
const founders = founderData.data;
const alumni = alumniData.data;
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/x-icon" href="https://poker-splash-2025.netlify.app/favicon.ico" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>CMU AI Poker Tournament</title>
		<SEO
			title="CMU AI Poker Tournament"
			description="Build an AI poker agent and compete for $6,000 in prizes. Test your skills in machine learning and game theory against other university students. Hosted by CMU Data Science Club."
		/>

		<!-- Additional Meta Tags -->
		<meta
			name="keywords"
			content="poker AI, machine learning competition, collegiate competition, Jump Trading, CMU, data science, game theory, artificial intelligence, AI poker contest"
		/>
		<meta name="robots" content="index, follow" />
		<meta name="author" content="CMU Data Science Club" />

		<!-- Structured Data -->
		<script is:inline type="application/ld+json">
			{
				"@context": "https://schema.org",
				"@type": "Event",
				"name": "CMU AI Poker Tournament",
				"description": "Build an AI poker agent and compete for $6,000 in prizes. Test your skills in machine learning and game theory against other university students.",
				"startDate": "2025-03-22",
				"endDate": "2025-03-29",
				"location": {
					"@type": "Place",
					"name": "Jump Trading Chicago Office",
					"address": {
						"@type": "PostalAddress",
						"streetAddress": "600 W Chicago Ave",
						"addressLocality": "Chicago",
						"addressRegion": "IL",
						"postalCode": "60654",
						"addressCountry": "US"
					}
				},
				"organizer": {
					"@type": "Organization",
					"name": "CMU Data Science Club",
					"url": "https://cmudsc.com"
				},
				"sponsor": {
					"@type": "Organization",
					"name": "Jump Trading",
					"url": "https://jumptrading.com"
				},
				"offers": {
					"@type": "Offer",
					"price": "0",
					"priceCurrency": "USD",
					"availability": "https://schema.org/InStock"
				}
			}
		</script>
		<script
			is:inline
			defer
			src="https://umami.cmudsc.com/script.js"
			data-website-id="4c1a9665-a7ca-4e44-8fd9-e7eee962ad28"></script>
	</head>
	<body>
		<main>
			<div class="background-particles"></div>
			<section
				class="min-h-screen max-h-screen flex flex-col justify-start items-center relative overflow-hidden bg-gradient-to-b from-background-dark to-background-darker p-8"
			>
				<div
					class="w-full max-w-7xl flex flex-col justify-start items-center pt-[8vh]"
				>
					<div class="w-full flex justify-center mb-8">
						<div class="max-w-[300px] w-full">
							<Image
								src={competitionLogo}
								alt="AI Poker Tournament Logo"
								class="w-full h-auto block"
							/>
						</div>
					</div>

					<div class="text-center">
						<h1
							class="font-outfit font-bold text-5xl md:text-[3.5rem] text-primary tracking-[-0.02em] m-0"
						>
							CMU AI Poker Tournament
						</h1>
						<div
							class="font-space-grotesk text-2xl sm:text-3xl md:text-4xl tracking-[0.5rem] sm:tracking-[1rem] font-medium my-4"
						>
							â™  â™¥ 2025 â™£ â™¦
						</div>
						<div class="flex items-center justify-center gap-2">
							<span class="text-white">Sponsored by</span>
							<a
								href="https://jumptrading.com"
								data-umami-event="Jump Trading Logo Click"
								target="_blank"
								rel="noopener noreferrer"
							>
								<Image
									src={jumpLogo}
									alt="Jump Trading"
									class="h-14 w-auto"
									format="webp"
								/>
							</a>
						</div>

						<div class="flex justify-center gap-4 mt-8">
							<a
								href="https://aipoker.cmudsc.com/"
								class="inline-flex items-center justify-center gap-2 px-5 py-3 rounded-lg font-semibold text-lg text-white bg-primary hover:bg-primary-hover transition-all hover:-translate-y-0.5 hover:shadow-[0_0_20px_rgba(255,51,51,0.6),0_0_40px_rgba(255,51,51,0.4),0_0_60px_rgba(255,51,51,0.2)] min-w-[130px]"
							>
								Register Now
							</a>
							<a
								href="https://discord.gg/69v9A9adh9"
								class="inline-flex items-center justify-center gap-2 px-5 py-3 rounded-lg font-semibold text-lg text-white bg-[#5865F2] hover:bg-[#4752c4] transition-all hover:-translate-y-0.5 hover:shadow-[0_0_20px_rgba(88,101,242,0.6),0_0_40px_rgba(88,101,242,0.4),0_0_60px_rgba(88,101,242,0.2)] min-w-[130px]"
							>
								<LargeDiscordIcon />
								Join Discord
							</a>
						</div>
					</div>
				</div>
			</section>

			<section class="about-section">
				<div class="about-content">
					<div class="about-header">
						<h2>About the Competition</h2>
						<p class="lead">
							Build an AI poker agent and compete for $6,000 in prizes. Test
							your skills in machine learning and game theory against other
							university students.
						</p>
					</div>

					<div class="features-grid">
						<div class="feature-card">
							<h3 class="feature-title">Career Opportunities</h3>
							<p class="feature-description">
								Direct recruiting opportunities with Jump Trading for top
								performers. Network with industry professionals and showcase
								your skills to potential employers.
							</p>
						</div>

						<div class="feature-card">
							<h3 class="feature-title">Hybrid Format</h3>
							<p class="feature-description">
								Compete online during the main competition. Opening ceremony,
								closing ceremony, office hours, workshops, and recruiter events
								all held in-person on campus.
							</p>
						</div>
					</div>

					<div class="partner-showcase">
						<div class="partner-grid">
							<a
								href="https://jumptrading.com"
								class="partner-item"
								target="_blank"
								rel="noopener noreferrer"
							>
								<img
									src="https://poker-splash-2025.netlify.app/images/logos/jump-trading.png"
									alt="Jump Trading Logo"
									class="company-logo"
								/>
							</a>
							<a
								href="https://cmudsc.com"
								class="partner-item"
								target="_blank"
								rel="noopener"
							>
								<img
									src="https://poker-splash-2025.netlify.app/images/logos/cmudsc.png"
									alt="CMU Data Science Club Logo"
									class="org-logo"
								/>
							</a>
						</div>
					</div>
				</div>
			</section>

			<section class="prize-section">
				<div class="prize-content">
					<h2>Prize Pool</h2>
					<div class="prize-box" id="prize-box">
						<div class="prize-amount">
							$<span id="prize-value">6,000</span>
						</div>
						<div class="total-text">Total Prize Pool</div>
					</div>
					<div class="additional-prize">
						Plus recruiting opportunities at Jump Trading
					</div>
					<div id="slot-machine" style="display: none;">
						<div class="slot-machine-container">
							<div class="slot-display">ðŸŽ° ðŸŽ° ðŸŽ°</div>
							<div class="lever-container">
								<div class="lever">
									<div class="lever-ball"></div>
									<div class="lever-stick"></div>
									<div class="lever-base"></div>
								</div>
							</div>
						</div>
					</div>
				</div>
				<script>
					import { initializePrize } from "../scripts/prize";
					document.addEventListener("DOMContentLoaded", initializePrize);
				</script>
			</section>

			<section class="rules-section">
				<div class="rules-content">
					<h2>Competition Rules</h2>
					<div class="rules-grid">
						<div class="rule-box">
							<h3>Eligibility</h3>
							<ul>
								<li>Open to all CMU students</li>
								<li>Teams of up to 2 members allowed</li>
							</ul>
						</div>
						<div class="rule-box">
							<h3>Technical Requirements</h3>
							<ul>
								<li>Agents must be implemented in Python</li>
								<li>Each bot runs with 1 vCPU and 2 GB of RAM</li>
								<li>Maximum runtime of 7 minutes per agent per match</li>
								<li>Use of external libraries limited to approved set</li>
								<li>Additional libraries may be requested for approval</li>
							</ul>
						</div>
						<div class="rule-box">
							<h3>Match Format</h3>
							<ul>
								<li>Matches are heads-up (1v1)</li>
								<li>Each match consists of 1000 hands</li>
								<li>Players start each hand with a fresh bankroll</li>
								<li>Winner is determined by total bankroll across the match</li>
							</ul>
						</div>
						<div class="rule-box">
							<h3>Tournament Structure</h3>
							<ul>
								<li>
									Teams play matches automatically throughout the day during the
									online phase
								</li>
								<li>Match requests can be made to higher elo opponents</li>
								<li>Teams with the highest elo win the competition</li>
							</ul>
						</div>
					</div>
				</div>
			</section>

			<section class="timeline-section">
				<div class="timeline-content">
					<h2>Competition Timeline</h2>
					<div class="timeline">
						<div class="timeline-item">
							<div class="timeline-date">Feb. 10</div>
							<div class="timeline-card">
								<h3>Registration Opens</h3>
								<p>
									Team registration begins. Start forming your teams and
									preparing your development environment.
								</p>
							</div>
						</div>

						<div class="timeline-item">
							<div class="timeline-date">Mar. 19</div>
							<div class="timeline-card">
								<h3>Monte Carlo Workshop</h3>

								<p>
									Learn about Monte Carlo tree search and other poker algorithms
									to prepare for the competition.
								</p>
							</div>
						</div>

						<div class="timeline-item">
							<div class="timeline-date">Mar. 21</div>
							<div class="timeline-card">
								<h3>Poker/Game Theory Workshop</h3>

								<p>
									Learn about poker and game theory to prepare for the
									competition.
								</p>
							</div>
						</div>

						<div class="timeline-item">
							<div class="timeline-date">Mar. 22</div>
							<div class="timeline-card">
								<h3>Competition Begins</h3>
								<p>
									Access to the variant, competition framework, and
									documentation announced at the opening ceremony. Office hours
									begin.
								</p>
							</div>
						</div>

						<div class="timeline-item">
							<div class="timeline-date">Mar. 28</div>
							<div class="timeline-card">
								<h3>Competition Ends</h3>
								<p>
									All teams must submit their final AI agents by 11:00 AM Mar.
									29 EST.
								</p>
							</div>
						</div>

						<div class="timeline-item">
							<div class="timeline-date">Mar. 29</div>
							<div class="timeline-card">
								<h3>Closing Ceremony</h3>
								<p>Winners are announced at the closing ceremony.</p>
							</div>
						</div>
					</div>
				</div>
			</section>

			<section class="bg-[#222] py-16 px-8">
				<div class="max-w-[1000px] mx-auto">
					<h2 class="text-4xl text-primary text-center mb-12">
						Frequently Asked Questions
					</h2>
					<div class="grid gap-6 grid-cols-1 md:grid-cols-2">
						<details
							class="bg-gradient-to-br from-[#2a2a2a] to-[#222] rounded-xl p-6 border border-white/10 shadow-lg hover:from-[#2d2d2d] hover:to-[#252525] transition-colors group"
						>
							<summary
								class="text-lg font-medium text-primary hover:text-primary-hover cursor-pointer pr-8 relative list-none"
							>
								What programming languages can I use?
								<span
									class="absolute right-0 top-1/2 -translate-y-1/2 text-2xl text-primary transition-transform group-open:rotate-45"
									>+</span
								>
							</summary>
							<p class="mt-4 text-white/90 leading-relaxed">
								You can use Python 3.12. Many common external libraries will be
								available for use. If you'd like to use any others, you can
								request them in our Discord.
							</p>
						</details>

						<details
							class="bg-gradient-to-br from-[#2a2a2a] to-[#222] rounded-xl p-6 border border-white/10 shadow-lg hover:from-[#2d2d2d] hover:to-[#252525] transition-colors group"
						>
							<summary
								class="text-lg font-medium text-primary hover:text-primary-hover cursor-pointer pr-8 relative list-none"
							>
								How many people can be on a team?
								<span
									class="absolute right-0 top-1/2 -translate-y-1/2 text-2xl text-primary transition-transform group-open:rotate-45"
									>+</span
								>
							</summary>
							<p class="mt-4 text-white/90 leading-relaxed">
								Teams can be between 1 and 2 CMU students.
							</p>
						</details>

						<details
							class="bg-gradient-to-br from-[#2a2a2a] to-[#222] rounded-xl p-6 border border-white/10 shadow-lg hover:from-[#2d2d2d] hover:to-[#252525] transition-colors group"
						>
							<summary
								class="text-lg font-medium text-primary hover:text-primary-hover cursor-pointer pr-8 relative list-none"
							>
								What poker variant will be used?
								<span
									class="absolute right-0 top-1/2 -translate-y-1/2 text-2xl text-primary transition-transform group-open:rotate-45"
									>+</span
								>
							</summary>
							<p class="mt-4 text-white/90 leading-relaxed">
								The specific poker variant will be revealed when the competition
								starts. It will be more complex than standard no-limit Texas
								Hold 'em.
							</p>
						</details>

						<details
							class="bg-gradient-to-br from-[#2a2a2a] to-[#222] rounded-xl p-6 border border-white/10 shadow-lg hover:from-[#2d2d2d] hover:to-[#252525] transition-colors group"
						>
							<summary
								class="text-lg font-medium text-primary hover:text-primary-hover cursor-pointer pr-8 relative list-none"
							>
								What are the prizes?
								<span
									class="absolute right-0 top-1/2 -translate-y-1/2 text-2xl text-primary transition-transform group-open:rotate-45"
									>+</span
								>
							</summary>
							<p class="mt-4 text-white/90 leading-relaxed">
								The prize pool will be $3,000 for first place, $2,000 for second
								place, and $1,000 for third place.
							</p>
						</details>

						<details
							class="bg-gradient-to-br from-[#2a2a2a] to-[#222] rounded-xl p-6 border border-white/10 shadow-lg hover:from-[#2d2d2d] hover:to-[#252525] transition-colors group"
						>
							<summary
								class="text-lg font-medium text-primary hover:text-primary-hover cursor-pointer pr-8 relative list-none"
							>
								Is there a registration fee?
								<span
									class="absolute right-0 top-1/2 -translate-y-1/2 text-2xl text-primary transition-transform group-open:rotate-45"
									>+</span
								>
							</summary>
							<p class="mt-4 text-white/90 leading-relaxed">
								No, participation in the competition is completely free.
							</p>
						</details>

						<details
							class="bg-gradient-to-br from-[#2a2a2a] to-[#222] rounded-xl p-6 border border-white/10 shadow-lg hover:from-[#2d2d2d] hover:to-[#252525] transition-colors group"
						>
							<summary
								class="text-lg font-medium text-primary hover:text-primary-hover cursor-pointer pr-8 relative list-none"
							>
								What frameworks are supported?
								<span
									class="absolute right-0 top-1/2 -translate-y-1/2 text-2xl text-primary transition-transform group-open:rotate-45"
									>+</span
								>
							</summary>
							<p class="mt-4 text-white/90 leading-relaxed">
								You only need to implement a simple interface we provide that
								tells your bot when it's your turn to act. You're free to use
								any approach you want - from simple rules to deep learning. For
								those interested in reinforcement learning, the game engine also
								implements the OpenAI Gym interface, and we'll provide example
								code for getting started with RL approaches.
							</p>
						</details>

						<details
							class="bg-gradient-to-br from-[#2a2a2a] to-[#222] rounded-xl p-6 border border-white/10 shadow-lg hover:from-[#2d2d2d] hover:to-[#252525] transition-colors group"
						>
							<summary
								class="text-lg font-medium text-primary hover:text-primary-hover cursor-pointer pr-8 relative list-none"
							>
								How does matchmaking work?
								<span
									class="absolute right-0 top-1/2 -translate-y-1/2 text-2xl text-primary transition-transform group-open:rotate-45"
									>+</span
								>
							</summary>
							<p class="mt-4 text-white/90 leading-relaxed">
								Matches will be run continuously with approximately 20 matches
								per day per team. Teams can request a limited number of
								additional matches against higher elo opponents each day.
							</p>
						</details>

						<details
							class="bg-gradient-to-br from-[#2a2a2a] to-[#222] rounded-xl p-6 border border-white/10 shadow-lg hover:from-[#2d2d2d] hover:to-[#252525] transition-colors group"
						>
							<summary
								class="text-lg font-medium text-primary hover:text-primary-hover cursor-pointer pr-8 relative list-none"
							>
								Can I prepare my bot before knowing the variant?
								<span
									class="absolute right-0 top-1/2 -translate-y-1/2 text-2xl text-primary transition-transform group-open:rotate-45"
									>+</span
								>
							</summary>
							<p class="mt-4 text-white/90 leading-relaxed">
								Yes, you can do whatever you want before the competition, but
								you will likely have to make significant changes to work with
								the custom variant.
							</p>
						</details>

						<details
							class="bg-gradient-to-br from-[#2a2a2a] to-[#222] rounded-xl p-6 border border-white/10 shadow-lg hover:from-[#2d2d2d] hover:to-[#252525] transition-colors group"
						>
							<summary
								class="text-lg font-medium text-primary hover:text-primary-hover cursor-pointer pr-8 relative list-none"
							>
								What resources are provided?
								<span
									class="absolute right-0 top-1/2 -translate-y-1/2 text-2xl text-primary transition-transform group-open:rotate-45"
									>+</span
								>
							</summary>
							<p class="mt-4 text-white/90 leading-relaxed">
								We provide a complete development framework, documentation,
								example bots, and office hours with the organizing team. You'll
								also have access to our Discord community for support.
							</p>
						</details>
					</div>
				</div>
			</section>

			<section>
				<h2>Leadership</h2>
				<div class="flex flex-wrap justify-center gap-8 max-w-7xl mx-auto px-6">
					{leadership.map((member) => <TeamMember member={member} />)}
				</div>
			</section>

			<section>
				<h2>Developers</h2>
				<div class="flex flex-wrap justify-center gap-8 max-w-7xl mx-auto px-6">
					{developers.map((member) => <TeamMember member={member} />)}
				</div>
			</section>

			<section>
				<h2>Founders</h2>
				<div class="flex flex-wrap justify-center gap-8 max-w-7xl mx-auto px-6">
					{founders.map((member) => <TeamMember member={member} />)}
				</div>
			</section>

			<section>
				<h2>Alumni</h2>
				<div class="flex flex-wrap justify-center gap-8 max-w-7xl mx-auto px-6">
					{alumni.map((member) => <TeamMember member={member} />)}
				</div>
			</section>

			<div class="relative z-10 bg-[#1a1a1a] py-12 px-6 -mt-8">
				<div class="max-w-6xl mx-auto flex flex-wrap gap-12 md:flex-row flex-col items-center md:items-start">
					<div class="flex-1 min-w-[250px] flex flex-col items-center md:items-start">
						<h3 class="text-primary text-lg mb-4">Contact Us</h3>
						<ul class="list-none p-0 m-0 flex flex-col items-center md:items-start gap-2.5">
							<li class="flex items-center gap-2 text-white/80 text-sm">
								<EmailIcon />
								<a href="mailto:pokerai@cmudsc.com" class="text-white/80 hover:text-primary-hover transition-colors">
									pokerai@cmudsc.com
								</a>
							</li>
							<li class="flex items-center gap-2 text-white/80 text-sm">
								<GithubIcon />
								<a href="https://github.com/cmu-dsc" target="_blank" class="text-white/80 hover:text-primary-hover transition-colors">
									GitHub Org
								</a>
							</li>
							<li class="flex items-center gap-2 text-white/80 text-sm">
								<SmallDiscordIcon />
								<a href="https://discord.gg/zCvq2ejkk5" target="_blank" class="text-white/80 hover:text-primary-hover transition-colors">
									Join our Discord
								</a>
							</li>
						</ul>
					</div>

