---
import { Image } from "astro:assets";
import type { ImageMetadata } from "astro";

interface Props {
  member: {
    name: string;
    role: string;
    image?: ImageMetadata;
    github?: string;
    linkedin?: string;
  }
}

const { member } = Astro.props;
const { name, role, image, github, linkedin } = member;
---

<div
  class="w-[217px] bg-gradient-to-br from-[#222222] to-[#2a2a2a] rounded-lg p-4 pb-6 text-center border border-white/10 shadow-lg transition-all duration-300 relative hover:-translate-y-1 hover:border-[#c41230]/30 hover:shadow-[0_8px_30px_rgba(196,18,48,0.15)] group"
>
  <!-- Glow effect -->
  <div
    class="absolute inset-0 rounded-xl bg-primary opacity-0 blur-xl transition-opacity duration-300 -z-10 group-hover:opacity-15"
  >
  </div>

  <div
    class="relative w-[120px] h-[120px] mx-auto mb-5 rounded-full overflow-hidden transition-transform duration-300 group-hover:scale-105"
  >
    {
      image ? (
        <Image
          src={image}
          alt={`${name}'s avatar`}
          width={240}
          height={240}
          class="w-[120px] h-[120px] object-cover"
          format="webp"
        />
      ) : (
        <div class="w-full h-full bg-gradient-to-br from-[#2a2a2a] to-[#333333] rounded-full relative after:content-[''] after:absolute after:top-1/2 after:left-1/2 after:-translate-x-1/2 after:-translate-y-1/2 after:w-[40%] after:h-[40%] after:bg-gradient-to-br after:from-[#333333] after:to-[#2a2a2a] after:rounded-full" />
      )
    }
  </div>

  <div class="space-y-2">
    <h3 class="text-white text-lg font-medium m-0">{name}</h3>
    <p class="text-white/70 text-sm">{role}</p>
    <div class="flex gap-3 justify-center pt-2">
      {
        github && (
          <a
            href={github}
            target="_blank"
            class="text-white/70 hover:text-primary-hover transition-colors"
            data-umami-event={`Team Member GitHub - ${name}`}
          >
            <svg viewBox="0 0 24 24" class="w-[18px] h-[18px]">
              <path
                fill="currentColor"
                d="M12 0C5.37 0 0 5.37 0 12c0 5.31 3.435 9.795 8.205 11.385.6.105.825-.255.825-.57 0-.285-.015-1.23-.015-2.235-3.015.555-3.795-.735-4.035-1.41-.135-.345-.72-1.41-1.23-1.695-.42-.225-1.02-.78-.015-.795.945-.015 1.62.87 1.845 1.23 1.08 1.815 2.805 1.305 3.495.99.105-.78.42-1.305.765-1.605-2.67-.3-5.46-1.335-5.46-5.925 0-1.305.465-2.385 1.23-3.225-.12-.3-.54-1.53.12-3.18 0 0 1.005-.315 3.3 1.23.96-.27 1.98-.405 3-.405s2.04.135 3 .405c2.295-1.56 3.3-1.23 3.3-1.23.66 1.65.24 2.88.12 3.18.765.84 1.23 1.905 1.23 3.225 0 4.605-2.805 5.625-5.475 5.925.435.375.81 1.095.81 2.22 0 1.605-.015 2.895-.015 3.3 0 .315.225.69.825.57A12.02 12.02 0 0024 12c0-6.63-5.37-12-12-12z"
              />
            </svg>
          </a>
        )
      }
      {
        linkedin && (
          <a
            href={linkedin}
            target="_blank"
            class="text-white/70 hover:text-primary-hover transition-colors"
            data-umami-event={`Team Member LinkedIn - ${name}`}
          >
            <svg viewBox="0 0 24 24" class="w-[18px] h-[18px]">
              <path
                fill="currentColor"
                d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"
              />
            </svg>
          </a>
        )
      }
    </div>
  </div>
</div>
